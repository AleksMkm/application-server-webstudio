{{# each products}}
<li class="portfolio-content__item">
              <a class="portfolio-card" href="/{{id}}"
                ><div class="portfolio-card__thumb">
                  <picture>
                    <source
                      srcset="
                        ./images/pf-{{image}}-mobile-450.webp 450w,
                        ./images/pf-{{image}}-mobile-900.webp 900w
                      "
                      media="(max-width: 767px)"
                      type="image/webp"
                    />
                    <source
                      srcset="
                        ./images/pf-{{image}}-desktop-370.webp 270w,
                        ./images/pf-{{image}}-desktop-740.webp 540w
                      "
                      media="(min-width: 1200px)"
                      type="image/webp"
                    />
                    <source
                      srcset="
                        ./images/pf-{{image}}-tablet-354.webp 354w,
                        ./images/pf-{{image}}-tablet-708.webp 708w
                      "
                      media="(min-width: 768px)"
                      type="image/webp"
                    />
                    <source
                      srcset="
                        ./images/pf-{{image}}-mobile-450.jpg 450w,
                        ./images/pf-{{image}}-mobile-900.jpg 900w
                      "
                      media="(max-width: 767px)"
                    />
                    <source
                      srcset="
                        ./images/pf-{{image}}-desktop-370.jpg 270w,
                        ./images/pf-{{image}}-desktop-740.jpg 540w
                      "
                      media="(min-width: 1200px)"
                    />
                    <source
                      srcset="
                        ./images/pf-{{image}}-tablet-354.jpg 354w,
                        ./images/pf-{{image}}-tablet-708.jpg 708w
                      "
                      media="(min-width: 768px)"
                    />
                    <img
                      class="portfolio-card__image"
                      src=".images/pf-{{image}}-desktop-370.jpg"
                      alt="{{name}}"
                      sizes="(min-width: 1200px) 33vw, (min-width: 768px) 50vw,  100vw"
                    />
                  </picture>
                  <p class="portfolio-card__overlay">
                    {{description}}
                  </p>
                </div>
                <div class="portfolio-card__description">
                  <h2 class="portfolio-card__title">{{name}}</h2>
                  <p class="portfolio-card__text">{{category}}</p>
                </div>
              </a>
            </li>
{{/each}}