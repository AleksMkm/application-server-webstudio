    <main class="portfolio-html">
      <!-- Portfolio section -->
      <section class="section portfolio">
        <div class="container portfolio__container">
          <!-- Portfolio filter -->
          <ul class="portfolio-filter portfolio__filter">
            <li class="portfolio-filter__item">
              <button type="button" class="portfolio-filter__button" data-control="all">
                Все
              </button>
            </li>
            <li class="portfolio-filter__item">
              <button type="button" class="portfolio-filter__button" data-control="web">
                Веб-сайты
              </button>
            </li>
            <li class="portfolio-filter__item">
              <button type="button" class="portfolio-filter__button" data-control="app">
                Приложения
              </button>
            </li>
            <li class="portfolio-filter__item">
              <button type="button" class="portfolio-filter__button" data-control="design">
                Дизайн
              </button>
            </li>
            <li class="portfolio-filter__item">
              <button type="button" class="portfolio-filter__button" data-control="marketing">
                Маркетинг
              </button>
            </li>
          </ul>

          <!-- Portfolio items -->
          <!-- Hidden h2 'Our portfolio' -->
          <ul class="portfolio-content portfolio__content" id="portfolio-cards">
            {{> portfolio-cards}}
          </ul>
        </div>
      </section>
    </main>
